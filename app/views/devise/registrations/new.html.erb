<h2>Aanmelden</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, class: 'col-xs-2 control-label' %>
    <div class="col-xs-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :team_name, class: 'col-xs-2 control-label' %>
    <div class="col-xs-4">
      <%= f.text_field :team_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'col-xs-2 control-label' %>
    <div class="col-xs-4">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'col-xs-2 control-label' %>
    <div class="col-xs-4">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-xs-2 control-label' %>
    <div class="col-xs-4">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-2 col-xs-4">
      <%= f.submit "Aanmelden", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
