<div class="well">

  <%- if controller_name != 'sessions' %>
    <%= link_to "Inloggen", new_session_path(resource_name), :class => "btn" %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Aanmelden", new_registration_path(resource_name), :class => "btn" %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to "Wachtwoord vergeten?", new_password_path(resource_name), :class => "btn" %>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Geen bevestiging ontvangen?", new_confirmation_path(resource_name), :class => "btn" %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Geen link ontvangen?", new_unlock_path(resource_name), :class => "btn" %>
  <% end -%>

</div>