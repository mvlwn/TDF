<%= form_tag nil, :method => :get, :id => "riders_search", :class => "form-inline" do %>
  <div class="form-group">
    <label class="control-label" for="name">Naam</label>
    <%= text_field_tag "name", params[:name], :class => "form-control input-sm", :id => "name" %>
  </div>
  <div class="form-group">
    <label class="control-label" for="team_id">Team</label>
    <%= select_tag "team_id", options_for_select_team_id, :class => "form-control input-sm" %>
  </div>
  <div class="form-group">
    <label class="control-label" for="price_from">Prijs vanaf</label>
    <%= select_tag "price_from", options_for_select_price_from, :class => "form-control input-sm" %>
  </div>
  <div class="form-group">
    <label class="control-label" for="price_to">Prijs tot</label>
    <%= select_tag "price_to", options_for_select_price_to, :class => "form-control input-sm" %>
  </div>
  <div class="form-group">
    <label class="control-label" for="price_to">Actief</label>
    <%= select_tag "active", options_for_select_active, :class => "form-control input-sm" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Zoek", :class => "btn btn-primary btn-sm" %>
  </div>
<% end %>
