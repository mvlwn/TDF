<% overall = false unless defined?(:overall) %>
<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th width="5%"></th>
    <th width="35%">Team</th>
    <th width="35%">Manager</th>
    <th width="15%">Punten</th>
		<th width="10%"></th>
  </tr>
  </thead>
  <tbody>
	<% i = 0 %>
  <% players.each do |player| %>
    <% points = player.sorted_points || player.points %>
    <tr>
			<td><%= i += 1 %></td>
      <td><%= player.link_to %> <%= player.you_badge %></td>
      <td><%= player_signed_in? ? player.name : '..' %></td>
			<td>
        <%= points %>
        <% if overall %>
        <span class="quiet small">+<%= points - player.points_till_stage(@stage.previous) %></span>
        <% end %>
      </td>
			<td class="center">
        <%= link_to_player_result(player, @player, stage) if stage %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>