<h2>Wijzig subpoele</h2>

<%= form_for @subpool, html: { class: 'form-horizontal' } do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Naam', class: 'control-label col-sm-2' %>
    <div class="col-sm-10"><%= form.text_field :name %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= form.submit 'Wijzigen', class: 'btn btn-primary' %>
      <%= link_to 'Annuleren', account_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>